{% extends 'base.html.twig' %}

{% block title %}
	Articles
{% endblock %}

{% block body %}
	<h1>Articles</h1>
	<div class="container">

		{% for article in articles %}
			
			<div class="card" style="width: 18rem;">
				{% if article.image %}
					<img src="Assets/images/{{ article.image }}" class="card-img-top" alt="...">
				{% endif %}
				<div class="card-body">
					<h5 class="card-title">{{ article.title}}</h5>
					<h6 class="card-subtitle mb-2 text-muted">{{ article.author }}
					</h6>
					<h6 class="card-subtitle mb-2 text-muted">publi√© le
						{{ article.publishedAt| date("d m Y H:i:sA", "Europe/Paris") }}
					</h6>
					<p class="card-text">{{ article.content}}</p>
					<p>
						<a href="article?id={{ article.id }}" class="card-link btn btn-primary">Voir plus</a>
					</p>
					
					{% if article.author == session.username or session.role == "admin" %}
						<div>
							<a href="modifier?id={{ article.id }}" class="card-link btn btn-warning">Modifier</a>
							<a href="supprimer?id={{ article.id }}" class="card-link btn btn-danger">Delete</a>
						</div>
					{% endif %}
				</div>
			</div>

			

		{% endfor %}
	</div>
{% endblock %}

{% block javascripts %}{% endblock %}
