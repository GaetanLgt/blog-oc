{% extends 'base.html.twig' %}

{% block title %}
	Articles
{% endblock %}

{% block body %}
	<h1>Articles</h1>
	<div class="container">
		{% for article in articles %}
			<div class="card" style="width: 18rem;">
			<img src="..." class="card-img-top" alt="...">
				<div class="card-body">
					<h5 class="card-title">{{ article.title}}</h5>
					<h6 class="card-subtitle mb-2 text-muted">{{ article.author }} </h6>
					<h6 class="card-subtitle mb-2 text-muted">publi√© le {{ article.published_at }} </h6>
					<p class="card-text">{{ article.content}}</p>
					<a href="article?id={{ article.id }}" class="card-link">Voir plus</a>
					<a href="supprimer?id={{ article.id }}" class="card-link">Delete</a>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}

