{% extends 'base.html.twig' %}

{% block title %}
	Articles
{% endblock %}

{% block body %}
	<h1>Modifier l'article
		{{ article.id }}</h1>
	<div class="container">
		<form class="row g-3" method="post" enctype="multipart/form-data">
			<div class="col-md-6">
				<label for="title" class="form-label">Titre</label>
				<input type="text" class="form-control" id="title" name="title" value="{{ article.title }}">
			</div>
			<div class="col-md-6">
				<label for="chapo" class="form-label">chapo</label>
				<input type="text" class="form-control" id="chapo" name="chapo" value="{{ article.chapo }}">
			</div>
			<div class="col-md-6">
				<label for="author" class="form-label text-muted">Auteur :
					{{ session.username }}</label>
				<input type="text" class="form-control invisible" id="author" name="author" value="{{ session.username }}">
				<label for="is_published" class="form-label text-muted">Publi√© :
					{{ article.isPublished }}</label>
				<select id="is_published" name="is_published" class="form-select invisible">
					<option value="{{ article.isPublished }}" selected></option>
				</select>
			</div>
			<div class="col-md-6">
				<label for="image" class="form-label">Images</label>
				<input type="file" class="form-control" id="image" name="image" value="{{ article.image }}">
			</div>
			<div class="col-12">
				<label for="content" class="form-label">Message</label>
				<textarea type="text" class="form-control" id="content" name="content" placeholder="Votre message" value="{{ article.content }}"></textarea>
			</div>
			<div class="col-12">
				<button type="submit" class="btn btn-primary">Modifier</button>
			</div>
		</form>
	</div>
{% endblock %}

{% block javascripts %}{% endblock %}
